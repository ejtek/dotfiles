#!/usr/bin/env bash
echo "This will rename all files in the current directory by removing their extensions."
read -p "Proceed? (y/n) " choice

if [[ "$choice" != "y" ]]; then
    echo "Operation cancelled."
    exit 1
fi

for file in *; do
    if [[ -f "$file" && "$file" != *.md ]]; then
        mv -- "$file" "${file%.*}"
    fi
done

echo "Renaming complete."
